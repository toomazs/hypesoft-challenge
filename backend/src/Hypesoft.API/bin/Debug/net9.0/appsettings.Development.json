{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "MongoDbSettings": {
    "ConnectionString": "mongodb://mongoadmin:secret@mongo:27017",
    "DatabaseName": "ShopSenseDb"
  },
  "Jwt": {
    "Authority": "http://keycloak:8080/realms/hypesoft",
    "Audience": "hypesoft-client",
    "Issuer": "http://localhost:8080/realms/hypesoft"
  }
}

